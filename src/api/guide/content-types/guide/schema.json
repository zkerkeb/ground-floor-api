{
  "kind": "collectionType",
  "collectionName": "guides",
  "info": {
    "singularName": "guide",
    "pluralName": "guides",
    "displayName": "guide",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "reading_time": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "instruction": {
      "type": "text",
      "required": true
    },
    "short_title": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "how_to",
        "tips"
      ],
      "default": "how_to",
      "required": true
    },
    "order": {
      "type": "integer",
      "required": false
    },
    "exercises": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::exercise.exercise",
      "mappedBy": "guide"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "guides"
    }
  }
}
